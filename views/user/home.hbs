<div class="container-fluid" style="margin-top: 8em;">

    {{!-- home all categories --}}
    <section class="home-page-category-section">
        <div class="row">
            <div class="col-md-6 home-page-category">
                <div class="home-page-category-items">
                    <a class="home-top-cate-link" href="/showMore/Food">
